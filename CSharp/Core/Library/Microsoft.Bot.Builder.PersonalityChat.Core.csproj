<?xml version="1.0" encoding="UTF-8"?>
<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <Version Condition=" '$(BUILD_BUILDNUMBER)' == '' ">1.0.0-alpha-m1.1</Version>
        <Version Condition=" '$(BUILD_BUILDNUMBER)' != '' ">$(BUILD_BUILDNUMBER)</Version>
        <PackageVersion Condition=" '$(PackageVersion)' == '' ">1.0.0-alpha-m1.1</PackageVersion>
        <PackageVersion Condition=" '$(PackageVersion)' != '' ">$(PackageVersion)</PackageVersion>
    </PropertyGroup>
    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <PackageId>Microsoft.Bot.Builder.PersonalityChat.Core</PackageId>
        <Description>Provide Personality Chat Service for the Bot Builder.</Description>
        <Summary>Personality Chat extension for Microsoft Bot Builder.</Summary>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>
    <PropertyGroup>
        <Company>Microsoft</Company>
        <Authors>Microsoft</Authors>
        <Product>Microsoft PersonalityChat</Product>
        <Copyright>© Microsoft Corporation. All rights reserved.</Copyright>
        <RepositoryType />
        <PackageTags>bots;ai;botframework;botbuilder</PackageTags>
        <Language>en-US</Language>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    </ItemGroup>
</Project>